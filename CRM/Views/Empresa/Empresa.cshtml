                                                    <h6>
                                                        Propietario: @item.Mensaje.Usuario.Persona.Nombre.ToUpper()
                                                        @{if (item.Mensaje.Usuario.Persona.ApellidoPaterno != null)
                                                            { @item.Mensaje.Usuario.Persona.ApellidoPaterno.ToUpper()} }
