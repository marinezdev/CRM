<style>



    .b-skills {
        border-top: 1px solid #f9f9f9;
        padding-top: 10px;
        text-align: center;
    }

        .b-skills:last-child {
            margin-bottom: -30px;
        }

        .b-skills h2 {
            margin-bottom: 50px;
            font-weight: 900;
            text-transform: uppercase;
        }

    .skill-item {
        position: relative;
        max-width: 90px;
        width: 100%;
        color: #555;
        margin-left: 25px;
    }

    .chart-container {
        position: relative;
        width: 100%;
        height: 0;
        padding-top: 100%;
        margin-bottom: 5px;
    }

    .skill-item .chart,
    .skill-item .chart canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100% !important;
        height: 100% !important;
    }

        .skill-item .chart:before {
            content: "";
            width: 0;
            height: 100%;
        }

        .skill-item .chart:before,
        .skill-item .percent {
            display: inline-block;
            vertical-align: middle;
        }

    .skill-item .percent {
        position: relative;
        line-height: 1;
        font-size: 20px;
        font-weight: 900;
        z-index: 2;
    }

        .skill-item .percent:after {
            content: attr(data-after);
            font-size: 20px;
        }

    p {
        font-weight: 500;
        FONT-SIZE: 10px;
    }
